// Medium
@include at-query($min, $small) {
  body,
  input,
  textarea,
  select {
    font-size: 112.5%;
  }
  .button {
    padding: .225em 2em;
  }
  .header__logo {
    height: 50px;
  }

  .nav-button {
    position: absolute;
    cursor: pointer;
    top: 0;
    right: 0;
    bottom: auto;
    left: auto;
    width: 100px;
    z-index: 7;
    background-color: transparent;
    {% if theme_settings.nav-background-image %}
      background-image: none;
    {% endif %}
    height: 50px;
    text-align: left;
    &:hover p {
      color: scale-color($accent-color, $lightness: +25%);
    }
    &:hover .nav-button__hamburger div {
      background-color: scale-color($accent-color, $lightness: +25%);
    }
    .nav-button__hamburger {
      display: inline-block;
      vertical-align: middle;
      margin-top: .25em;
      div {
        width: 20px;
        height: 4px;
        margin-bottom: .15em;
        border-radius: 2px;
        background-color: $accent-color;
        transition: background-color .25s;
      }
    }
    p {
      display: inline-block;
      vertical-align: middle;
      font-size: 1em;
      color: $accent-color;
      position: relative;
      width: auto;
      text-align: left;
      &:hover {
        color: scale-color($accent-color, $lightness: +25%);
      }
    }
  }
  .main-nav__triangle {
    width: 0;
    z-index: 8;
    height: 0;
    position: absolute;
    top: 2.4em;
    right: 1em;
    border-style: solid;
    border-width: 0 20px 20px 20px;
    border-color: transparent transparent $accent-color transparent;
  }
  .main-nav__items {
    position: absolute;
    z-index: 10;
    top: 3.4em;
    right: .5em;
    left: auto;
    bottom: auto;
    height: auto;
    background-color: $accent-color;
    background-image: none;
    color: white;
    width: 250px;
  }
    .main-nav__item {
      float: none;
      border: none;
      width: auto;
      background-color: $accent-color;
      color: white;
    }
    .main-nav__item:last-child {
      border-right: none;
      p {
        margin-bottom: 0;
      }
    }
      .main-nav__link {
        background-color: $accent-color;
        transition: background-color .25s;
        &:hover {
          background-color: #FFF;
        }
        &:hover .main-nav__title {
          color: $accent-color;
        }
      }
      .main-nav__title {
        transition: color .25s;
        color: white;
      }
  // home
  .home-header--medium-up {
    overflow: hidden;
    height: 100%;
  }
  .button-overlay {
    font-size: 0.75em;
    padding: .25em .5em;
  }
  .overlay__informations {
    font-size: .85em;
  }
  .image-header--top-left {
    margin-top: 0;
  }
  .image-header--top-left,
  .image-header--top-right,
  .image-header--middle-left,
  .image-header--bottom-right {
    width: 50%;
    float: left;
  }
  .image-header--middle-middle ,
  .image-header--bottom-left {
    width: 25%;
    float: left;
  }
  .image-header--middle-right {
    width: 25%;
    height: 400px;
    float: right;
    border-bottom: none;
  }
  .image-header--top-left,
  .image-header--middle-left,
  .image-header--bottom-left {
    border-right: 3px solid $body-background;
  }
  .image-header--top-right,
  .image-header--middle-right {
    border-left: 3px solid $body-background;
  }
  .image-header--middle-middle,
  .image-header--bottom-right {
    border-left: 3px solid $body-background;
    border-right: 3px solid $body-background;
  }
  .image-header--top-right {
    border-top: none;
  }
  .image-header--bottom-left {
    border-bottom: none;
  }

  .home-featured-two {
    width: 50%;
    float: left;
  }
  .block-grid {
    margin-bottom: 0;
    &>li {
      &:nth-of-type(odd) {
        border-right: 6px solid $body-background;
      }
    }
  }

  .menu-children {
    &>li {
      &:nth-of-type(2n+1) {
        clear: none;
      }
      &:nth-of-type(4n+1) {
        clear: left;
      }
    }
  }
  .menu-child {
    width: 25%;
  }
  .restaurant-gallery {
    margin-top: 3em;
    margin-bottom: .5em;
  }
  .gallery__item {
    float: left;
    width: 46%;
    margin: 2%;
  }
}

