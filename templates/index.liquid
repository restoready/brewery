<div class="wrapper">
  <section class="opening-hours">
    <header class="section__header">
      <h2 class="section__title">{{ "Horaires" | t }}</h2>
    </header>
    <main class="section__main">
      <dl class="opening-days">
      {% for day in opening_hours %}
        <dt class="opening-day">
          {{ day.name }}
        </dt>
        <dd class="opening-shifts">
          {{ day.shifts }}
        </dd>
      {% endfor %}
      </dl>
    {% if restaurant.opening_hours_information? %}
      <div class="opening-hours__information">
        <p>{{ restaurant.opening_hours_information }}</p>
      </div>
    {% endif %}
    </main>
  </section>
</div>

{% if home_menus.size > 0 %}
  <section class="menus menus--featured">
    <header class="section__header">
      <h2 class="section__title">{{ "Nos spécialités" | t }}</h2>
    </header>
    <main class="section__main">
      <ul class="block-grid">
        {% for menu in home_menus %}
            <li class="home-featured__image image-overlay {% if home_menus.size >= 2 %}home-featured-two{% endif %} {% if home_menus.size >= 3 %}home-featured-three{% endif %} {% if home_menus.size >= 4 %}home-featured-four{% endif %} {% if home_menus.size >= 6 %}home-featured-six{% endif %}" {% if menu.main_image? %} style="background-image:url('{{ menu.main_image | custom_image_url: "1500x400#" }}');background-size: cover;background-position: center center;" {% endif %}>
              <div class="{% if menu.main_image? %}overlay{% endif %}"></div>
              <div class="{% if menu.main_image? %}overlay__informations{% else %}home-featured__no-image-informations{% endif %}">
                {% if menu.parent? %}
                <p class="menu__title">{{ menu.name }}</p>
                <a class="button button-overlay" href="{{ menu.root_parent.url }}#menu-{{menu.id}}">
                  {{ "Voir le menu" | t }}
                </a>
              {% else %}
                <p class="menu__title">{{ menu.name }}</p>
                <a class="button button-overlay" href="{{ menu.url }}">
                  {{ "Voir le menu" | t }}
                </a>
              {% endif %}
              </div>
            </li>
        {% endfor %}
      </ul>
    </main>
  </section>
{% endif %}
{% if home_foods.size > 0 %}
  <section class="foods foods--featured">
    <header class="section__header">
        <h2 class="section__title">{{ "Plats" | t }}</h2>
    </header>
    <main class="section__main">
      <ul class="block-grid">
        {% for food in home_foods %}
          <li class="home-featured__image image-overlay {% if home_foods.size >= 2 %}home-featured-two{% endif %} {% if home_foods.size >= 3 %}home-featured-three{% endif %} {% if home_foods.size >= 4 %}home-featured-four{% endif %} {% if home_foods.size >= 6 %}home-featured-six{% endif %}" {% if food.main_image? %} style="background-image:url('{{ food.main_image | custom_image_url: "1500x400#" }}');background-size:cover;background-position: center center;" {% endif %}>
            <div class="{% if food.main_image? %}overlay{% endif %}"></div>
            <div class="{% if food.main_image? %}overlay__informations{% else %}home-featured__no-image-informations{% endif %}">
              {% assign relative_menu = food.menu %}
              <p class="food__title">{{ food.name }}</p>
              <a class="button button-overlay" href="{% if relative_menu.parent? %}{{ relative_menu.root_parent.url }}#menu-{{relative_menu.id}}{% else %}{{ relative_menu.url }}{% endif %}">
                {{ "Voir le plat" | t }}
              </a>
            </div>
          </li>
        {% endfor %}
      </ul>
    </main>
  </section>
{% endif %}
<div class="clearer"></div>
<div class="see-all-button">
  <p>
    <a class="button" href="{{ restaurant.menus_path }}">
      {{ "Voir toute la carte" | t }}
    </a>
  </p>
</div>

<section class="directions">
  <header class="section__header">
    <h2 class="section__title">{{ "Localisation" | t }}</h2>
  </header>
  <main class="section__main">
    {% if theme_settings.google_map_type != "" %}
      <div class="map">
        {% if theme_settings.google_map_type == "embed" %}
          {% google_map_embed: "size:100%x320" %}
        {% elsif theme_settings.google_map_type == "image" %}
          <a class="map__link" href="{% google_map_url %}">
            <img class="map__image" src="{% google_map_image_url: "size:640x320" %}" />
          </a>
        {% endif %}
        <div class="directions__overlay"></div>
        <footer class="directions__footer">
          <a class="button button-see-location" href="{% google_map_url %}">
            {{ "Voir l'itinéraire" | t }}
          </a>
        </footer>
      </div>
    </div>
    {% endif %}
    {% if restaurant.street_address? || restaurant.zip_code? || restaurant.city? %}
    <div class="address">
      <p>
        {% if restaurant.street_address? %}
          {{ restaurant.street_address }}
          <br />
        {% endif %}
        {% if restaurant.zip_code? %} {{ restaurant.zip_code }} {% endif %}
        {% if restaurant.city? %} <strong>{{ restaurant.city }}</strong> {% endif %}
      </p>
    </div>
    {% endif %}
  </main>
</section>